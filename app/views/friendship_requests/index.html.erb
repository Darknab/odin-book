<div class="container">
  <h2>Friend requests</h2>
    <% if @incoming.any? %>
      <% @incoming.each do |request|%>
        <div class="card">
          <div class="card-body">
            <%= link_to request.user.name ||request.user.email , user_path(request.user.id) %>
            <%= button_to "Accept", { :controller => "friendship_requests", :action => "update", :id => request.id }, :method => :put %>
            <%= button_to "Decline", { :controller => "friendship_requests", :action => "destroy", :id => request.id }, :method => :delete %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p> You have no incoming frindship requests for the moment </p>
    <% end %>

  <h2> pending requests </h2>
    <% if @outgoing.any? %>
      <% @outgoing.each do |request| %>
        <div class="card">
          <div class="card-body">
            <%= link_to request.friend.name || request.friend.email, user_path(request.friend.id)%>
          </div>
        </div>
      <% end %>
    <% else %>
      <p> You have no pending invitations for the moment </p>
    <% end %>
</div>