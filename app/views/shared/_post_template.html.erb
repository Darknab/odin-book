<div>
  <%= turbo_frame_tag "edit_post" do %>
    <%= post.body %>
    <% if current_user == post.user %>
      <%= link_to "Edit", edit_post_path(post) %>
      <%= link_to "Delete", @post, data: {
                            turbo_method: :delete,
                            turbo_confirm: "Are you sure?" }%>
    <% end %>
  <% end %>
</div>