
<div class=" row mt-5">
  <div class="ms-auto d-inline-block" style="width: 600px">
    <div class=" h-20 my-5">
      <h1 class="text-primary fw-bold display-2" >Odinbook</h1>
      <p class="fs-3">A facebook clone made on Ruby On rails!</p>
    </div>
  </div>
  <div class="bg-white rounded p-4 shadow d-inline-block me-auto" style="width: 400px">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, class:"d-none" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email", class: "w-100 form-control" %>
        </div>

        <div class="field">
          <%= f.label :password, class:"d-none" %><br />
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "password", class: "w-100 form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field my-2">
            <%= f.check_box :remember_me, class:"form-check-input" %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-primary w-100" %>
        </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div> 
</div>


